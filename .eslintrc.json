{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "comma-dangle": [
            2,
            "never"
        ],
        "no-debugger": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-duplicate-case": 2,
        "no-empty": 1,
        "no-ex-assign": 2,
        "no-func-assign": 2,
        "no-irregular-whitespace": 2,
        "no-unreachable": 2,
        "no-unexpected-multiline": 2,
        "eqeqeq": [
            2,
            "smart"
        ],
        "no-redeclare": 2,
        "no-self-compare": 1,
        "no-delete-var": 2,
        "no-label-var": 2,
        "no-unused-vars": [
            2,
            {
                "args": "all",
                // Unused args should begin and end with an underscore
                "argsIgnorePattern": "(^.+_$)",
                // Also allow common libraries to be required even if not used
                "varsIgnorePattern": "^_$|^Promise$|^alias$|^log$"
            }
        ],
        "no-use-before-define": [
            2,
            "nofunc"
        ],
        "comma-spacing": [
            2,
            {
                "after": true
            }
        ],
        "eol-last": 2,
        "no-mixed-spaces-and-tabs": [
            2,
            "smart-tabs"
        ],
        "no-trailing-spaces": 2,
        "arrow-spacing": [
            2,
            {
                "before": true,
                "after": true
            }
        ],
        "no-const-assign": 2,
        "no-var": 2,
        "prefer-const": 2
    }
}
